#!/bin/bash

# Function to prompt for reboot
prompt_reboot() {
    read -p "Do you want to reboot the system now? (y/n): " choice
    if [[ "$choice" == "y" || "$choice" == "Y" ]]; then
        echo "Rebooting..."
        sudo reboot
    elif [[ "$choice" == "n" || "$choice" == "N" ]]; then
        echo "Skipping reboot. Please reboot the system manually later."
    else
        echo "Invalid choice. Please enter 'y' for yes or 'n' for no."
        prompt_reboot  # Prompt again for valid input
    fi
}

# Call the function to prompt for reboot
prompt_reboot

